        <script>
            let drp = document.getElementsByClassName("droptext");

            for (let i = 0; i < drp.length; i++) {
                drp[i].addEventListener("click", function () {
                    this.classList.toggle("active");
                    const panel = this.nextElementSibling;
                    if (panel.style.display === "block") {
                        panel.style.display = "none";
                    } else {
                        panel.style.display = "block";
                    }
                });
            }

            let newTexts = 0;

            function addNewBlog() {
                const text = document.getElementById("blogText").value;
                const date = document.getElementById("dateInput").value;

                let result = "<button class='droptext'>" + date + "</button><div class='blogtext'><p>" + text + "</p></div>";
                document.getElementById("newText").innerHTML += result;
                drp = document.getElementsByClassName("droptext");

                newTexts++;

                for (i = 0; i < newTexts; i++) {
                    drp[i].addEventListener("click", function () {
                        this.classList.toggle("active");
                        const panel = this.nextElementSibling;
                        if (panel.style.display === "block") {
                            panel.style.display = "none";
                        } else {
                            panel.style.display = "block";
                        }
                    });
                }
            }

            if (localStorage.getItem("numberOfLikes")) {
                document.getElementById("numberOfLikes").innerHTML = localStorage.numberOfLikes;
            } else {
                document.getElementById("numberOfLikes").innerHTML = "0";
            }

            function likeImage() {
                if (!localStorage.getItem("numberOfLikes")) {
                    localStorage.setItem("numberOfLikes", "0");
                }

                const previousNumberOfLikes = localStorage.getItem("numberOfLikes");

                const numberOfLikes = 1 + Number(previousNumberOfLikes);
                document.getElementById("numberOfLikes").innerHTML = numberOfLikes.toString();

                localStorage.numberOfLikes = numberOfLikes;
            }

            function submitSurvey() {
                const x = document.forms["surveyForm"]["fname"].value;
                if (x === "") {
                    alert("Please enter your name!")
                    return false;
                } else {
                    alert("Your survey has been submitted!")
                }
            }

            let comments = "";
            let randomUser;

            if (localStorage.getItem("comments")) {
                document.getElementById("commentContainer").innerHTML = localStorage.komentari;
            } else {
                document.getElementById("commentContainer").innerHTML = "";
            }

            function postComment() {
                if (!localStorage.getItem("comments")) {
                    localStorage.setItem("comments", "");
                }

                const allComments = localStorage.getItem("comments");
                const x = document.getElementById("commentValue").value;
                randomUser = Math.floor(Math.random() * 100);
                comments = allComments + "<div>" + "User" + randomUser + ": " + x + "</div>";
                document.getElementById("commentContainer").innerHTML = comments;

                document.getElementById("commentValue").value = "";

                localStorage.comments = comments;
            }
            
        </script>

